.input_view{
    padding: 10px;
    width: 100%;
    font-size: 32rpx;
}
.input_view2{
    padding: 10px;
    width: 100%;
    font-size: 32rpx;
    white-space: pre-wrap;
    word-break: break-all;
  }
.upload_image {
  
    height: 70rpx;
    width: 70rpx;
}
.close_img {
    position: absolute;
    top: 30rpx;
    right: 30rpx;
}
.img_view{
    display: flex;
    position: relative;
    padding: 4px;
    background-color: white;
    align-items: flex-start;
  }
  .img_view image{
    width: 100%;
    height: 100%;
  }
  .circle_center_view{
    position: fixed;
    z-index: 50;
    opacity: 0.7;
    background-color: aqua;
    border-radius: 50%;
    box-shadow: 0px 0px 1px 1px #cdcdcd;
  }